<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/batch
	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="classpath:spring/batch/config/context.xml"/>
    <import resource="classpath:spring/batch/config/embedded-database.xml"/>

    <!-- Readers -->
    <bean id="yahooReaderFactory" class="com.sedc.collectors.yahoo.util.YahooXmlReaderFactory">
        <constructor-arg name="sourceEngineName" value="YAHOO_HISTORY"/>
        <constructor-arg name="symbolManager" ref="symbolManager"/>
        <constructor-arg name="systemVariableManager" ref="systemVariableManager"/>
    </bean>
    <bean id="yahooHistoricalReader" factory-bean="yahooReaderFactory" factory-method="getHistoricalReader">
    </bean>

    <!-- Processors -->
    <bean id="yahooHistoricalProcessor" class="com.sedc.collectors.yahoo.historical.YahooHistoricalProcessor">
    </bean>

    <!-- Writers -->
    <bean id="yahooHistoricalDatabaseWriter" class="org.springframework.batch.item.database.HibernateItemWriter">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <!-- Job description -->
    <batch:job id="yahooHistoricalLoadJob">
        <batch:step id="load">
            <batch:tasklet>
                <batch:chunk reader="yahooHistoricalReader"
                             writer="yahooHistoricalDatabaseWriter"
                             processor="yahooHistoricalProcessor"
                             commit-interval="1">
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
    </batch:job>
</beans>