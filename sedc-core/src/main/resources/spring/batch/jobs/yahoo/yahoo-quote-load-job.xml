<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/batch
    http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util.xsd">

    <import resource="classpath:spring/batch/config/context.xml"/>
    <import resource="classpath:spring/batch/config/database.xml"/>

    <bean name="symbolReader" class="com.sedc.core.SymbolReader" scope="step">
        <property name="symbolManager" ref="symbolManager"/>
        <property name="region" value="#{jobParameters[region]}"/>
    </bean>

    <bean name="symbolManager" class="com.sedc.managers.SymbolManagerImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean name="resourceGenerator" class="com.sedc.collectors.yahoo.util.YahooResourceGenerator" scope="step">
        <property name="sourceEngineName" value="YAHOO_QUOTE"/>
        <property name="urls" ref="resources"/>
    </bean>

    <bean name="multiResourceReader" class="com.sedc.core.ListResourceItemReader">
        <property name="resources" ref="resources"/>
        <property name="delegate" ref="reader"/>
    </bean>

    <util:list id="resources" list-class="java.util.ArrayList"/>

    <bean id="reader" class="org.springframework.batch.item.xml.StaxEventItemReader">
        <property name="fragmentRootElementName" value="quote"/>
        <property name="unmarshaller" ref="unmarshaller"/>
    </bean>

    <bean id="unmarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="classesToBeBound">
            <list>
                <value>com.sedc.collectors.yahoo.quote.model.YahooQuoteRecord</value>
            </list>
        </property>
    </bean>

    <bean id="dbWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
        <property name="dataSource" ref="dataSource"/>
        <property name="sql">
            <value>
                <![CDATA[
                INSERT INTO stage_yahoo_quote
                (symbol, avg_daily_volume, "change", days_low, days_high, year_low, year_high, last_trade_price, name, volume)
                VALUES(:symbol, :averageDailyVolume, :change, :daysLow, :daysHigh, :yearLow, :yearHigh, :lastTradePriceOnly, :name, :volume)
            ]]>
            </value>
        </property>
        <!-- It will take care matching between object property and sql name parameter -->
        <property name="itemSqlParameterSourceProvider">
            <bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider"/>
        </property>
    </bean>

    <bean id="stageCleaner" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="DELETE FROM stage_yahoo_quote"/>
    </bean>

    <bean id="symbolLinker" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="
            update stage_yahoo_quote tgt
            set sym_id = (
                select src.sym_id
                from symbol src
                where tgt.symbol=src.name
                    and tgt.ex_id=src.ex_id
                limit 1)
            where active_flag = 'Y'"
        />
    </bean>

    <bean id="exchangeLinker" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="
            update stage_yahoo_quote tgt
            set ex_id = (
                select src.ex_id
                from exchange src
                where tgt.stock_exchange=src.name
                order by src.ex_id asc
                limit 1)
            where active_flag = 'Y'"
        />
    </bean>

    <bean id="symbolFilter" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="
            update stage_yahoo_quote
            set active_flag = 'N',
                active_reason = 'Symbol not found'
            where sym_id is null"
        />
    </bean>

    <bean id="exchangeFilter" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="
            update stage_yahoo_quote
            set active_flag = 'N',
                active_reason = 'Exchange not found'
            where ex_id is null"
        />
    </bean>

    <bean id="dataFilter" class="com.sedc.core.JbdcBatchUpdater">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="sql" value="
            update stage_yahoo_quote
            set active_flag = 'N',
                active_reason = 'Data is corrupted'
            where symbol is null
                or avg_daily_volume is null
                or change is null
                or days_low is null
                or days_high is null
                or year_low is null
                or year_high is null
                or market_capitalization is null
                or last_trade_price is null"
        />
    </bean>

    <!-- Job Description -->
    <batch:job id="yahooQuoteLoadJob">
        <batch:step id="loadSymbols" next="clearStage">
            <batch:tasklet>
                <batch:chunk reader="symbolReader"
                             writer="resourceGenerator"
                             commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="clearStage" parent="loadSymbols" next="loadToStage">
            <batch:tasklet>
                <batch:chunk reader="stageCleaner" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="loadToStage" parent="clearStage" next="filterStage">
            <batch:tasklet>
                <batch:chunk reader="multiResourceReader"
                             writer="dbWriter"
                             commit-interval="1000"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="filterStage" parent="loadToStage" next="linkExchange">
            <batch:tasklet>
                <batch:chunk reader="dataFilter" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="linkExchange" parent="filterStage" next="filterByExchange">
            <batch:tasklet>
                <batch:chunk reader="exchangeLinker" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="filterByExchange" parent="linkExchange" next="linkSymbols">
            <batch:tasklet>
                <batch:chunk reader="exchangeFilter" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="linkSymbols" parent="filterByExchange" next="filterBySymbol">
            <batch:tasklet>
                <batch:chunk reader="symbolLinker" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
        <batch:step id="filterBySymbol" parent="linkSymbols">
            <batch:tasklet>
                <batch:chunk reader="symbolFilter" commit-interval="1"/>
            </batch:tasklet>
        </batch:step>
    </batch:job>
</beans>