<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/batch
	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="classpath:spring/batch/config/context.xml"/>
    <import resource="classpath:spring/batch/config/database.xml"/>

    <!--read the data from finam api-->
    <bean id="reader" class="org.springframework.batch.item.xml.StaxEventItemReader">
        <property name="fragmentRootElementName" value="security"/>
        <property name="resource" value="classpath:com/sedc/collectors/finam/symbol/securities.xml"/>
        <property name="unmarshaller" ref="unmarshaller"/>
    </bean>

    <bean id="unmarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="classesToBeBound">
            <list>
                <value>com.sedc.collectors.yahoo.model.JaxbIndustry</value>
            </list>
        </property>
    </bean>

    <!--filter & calculate the data-->
    <bean id="processor" class="com.sedc.collectors.yahoo.industry.YahooIndustryProcessor"/>

    <!--store the data-->
    <bean id="writer" class="org.springframework.batch.item.file.FlatFileItemWriter">
        <!-- write to this csv file -->
        <property name="resource" value="file:target/cvs/finam-symbol.csv"/>
        <property name="shouldDeleteIfExists" value="true"/>

        <property name="lineAggregator">
            <bean class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
                <property name="delimiter" value=","/>
                <property name="fieldExtractor">
                    <bean class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                        <property name="names" value="id,name,description"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <batch:job id="finam-symbol-load-job">
        <batch:step id="loadFromFile">
            <batch:tasklet>
                <batch:chunk reader="reader"
                             writer="writer"
                             processor="processor"
                             commit-interval="1">
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
    </batch:job>

</beans>